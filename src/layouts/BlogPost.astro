---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import CategoryBadge from '../components/CategoryBadge.astro';
import TagList from '../components/TagList.astro';
import ReadingTime from '../components/ReadingTime.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, category, tags, readingTime, author } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main class="main-content">
			<article class="article">
				<header class="article__header">
					<div class="article__meta-top">
						<CategoryBadge categoryId={category} />
					</div>
					
					<h1 class="article__title">{title}</h1>
					
					<div class="article__meta">
						<span class="article__author">{author}</span>
						<span class="article__separator">•</span>
						<FormattedDate date={pubDate} />
						{readingTime && (
							<>
								<span class="article__separator">•</span>
								<ReadingTime minutes={readingTime} />
							</>
						)}
					</div>
					
					{updatedDate && (
						<div class="article__updated">
							Last updated on <FormattedDate date={updatedDate} />
						</div>
					)}
				</header>

				{heroImage && (
					<div class="article__hero">
						<img src={heroImage} alt={title} class="article__hero-image" />
					</div>
				)}

				<div class="article__content">
					<slot />
				</div>

				{tags && tags.length > 0 && (
					<footer class="article__footer">
						<div class="article__tags">
							<h3 class="article__tags-title">Tags</h3>
							<TagList tags={tags} />
						</div>
					</footer>
				)}
			</article>
		</main>
		<Footer />
	</body>
</html>

<style>
	.main-content {
		min-height: calc(100vh - 300px);
		padding: var(--space-4xl) 0;
	}

	.article {
		max-width: var(--max-width-content);
		margin: 0 auto;
		padding: 0 var(--space-lg);
	}

	.article__header {
		margin-bottom: var(--space-3xl);
		text-align: center;
	}

	.article__meta-top {
		margin-bottom: var(--space-lg);
		display: flex;
		justify-content: center;
	}

	.article__title {
		font-size: var(--font-size-4xl);
		margin: 0 0 var(--space-lg);
		color: var(--color-text-primary);
		line-height: var(--line-height-tight);
	}

	.article__meta {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: var(--space-sm);
		flex-wrap: wrap;
		font-size: var(--font-size-sm);
		color: var(--color-text-secondary);
	}

	.article__author {
		font-weight: 500;
	}

	.article__separator {
		color: var(--color-border);
	}

	.article__updated {
		margin-top: var(--space-md);
		font-size: var(--font-size-sm);
		color: var(--color-text-tertiary);
		font-style: italic;
	}

	.article__hero {
		margin-bottom: var(--space-3xl);
		border-radius: var(--radius-lg);
		overflow: hidden;
	}

	.article__hero-image {
		width: 100%;
		height: auto;
		display: block;
	}

	.article__content {
		margin-bottom: var(--space-4xl);
	}

	/* Style content elements */
	.article__content :global(h1),
	.article__content :global(h2),
	.article__content :global(h3),
	.article__content :global(h4),
	.article__content :global(h5),
	.article__content :global(h6) {
		margin-top: var(--space-3xl);
		margin-bottom: var(--space-lg);
	}

	.article__content :global(h1:first-child),
	.article__content :global(h2:first-child),
	.article__content :global(h3:first-child) {
		margin-top: 0;
	}

	.article__content :global(img) {
		margin: var(--space-2xl) 0;
	}

	.article__content :global(blockquote) {
		margin: var(--space-2xl) 0;
	}

	.article__footer {
		padding-top: var(--space-3xl);
		border-top: 1px solid var(--color-border);
	}

	.article__tags {
		display: flex;
		flex-direction: column;
		gap: var(--space-md);
	}

	.article__tags-title {
		font-size: var(--font-size-lg);
		font-weight: 600;
		margin: 0;
		color: var(--color-text-primary);
	}

	@media (max-width: 768px) {
		.main-content {
			padding: var(--space-3xl) 0;
		}

		.article__title {
			font-size: var(--font-size-3xl);
		}
	}
</style>
